#Terminal color #002448

alias l="ls"
alias lR="ls -R"
alias laR="ls -aR"
alias llaR="ls -alR"


#aloas to check leaks
alias leaks="valgrind --leak-check=yes --track-origins=yes"

#code directory alias
alias code="cd ~/Bureau/__code__/"
alias codec="cd ~/Bureau/__code__/__C__/"
alias codecy="cd ~/Bureau/__code__/__C__/__YAK__"
alias codecsock="cd ~/Bureau/__code__/__C__/__SOCKET__/"

#git alias
alias gcln="git clone"
alias gstat="git status"
alias gadd="git add"
alias gcom="git commit -m"
alias gph="git push"

#Get disk space of current directory and sub directory and sort it 
alias dspace="du -sh ./* | sort -h"

#useful commands
alias del="rm -rf"
